
---
import { initModals } from "../components/ModalController.ts";
import Modal from "../components/Modal.astro";
---
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>HEAVENLY RESTAURANT</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

  <!-- Top Navigation Bar -->
  <header class="navbar">
    <div class="nav-left">
      <a href="/">
        <img src="/images/hvn.jpeg" alt="HEAVENLY RESTAURANT" class="logo"/>
      </a>
    </div>
    <nav class="nav-right">
      <a href="#location">Location</a>
      <a href="#contact">Contact</a>
    </nav>
  </header>

  <!-- Hero Section -->
  <section class="hero">
    <img src="/images/hero.jpeg" alt="Restaurant Interior" class="hero-img"/>
    <div class="hero-text">
      <h2>Welcome to HEAVENLY FOOD RESTAURANT</h2>
      <p>Delicious food, warm atmosphere, unforgettable taste.</p>
    </div>
  </section>

  <!-- Info Section -->
  <section class="info-section">
    <!-- Left side -->
    <div class="info-left">
      <div class="big-btn-row">
        <a href="#" class="big-btn delivery">🚚 DELIVERY</a>
        <a href="#" class="big-btn pickup">📦 PICKUP</a>
      </div>

      <div class="small-btn-grid">
        <a href="/menu" class="small-btn">Menu</a>
        <button class="small-btn" data-open="contactModal">Contact Us</button>
        <a href="https://www.google.com/maps/place/Heavenly+Food+Restaurant/@55.1704966,-118.7913443,15.65z/data=!4m6!3m5!1s0x539091996524b043:0xebc37e738176f27a!8m2!3d55.1708464!4d-118.7993025!16s%2Fg%2F11v9cwy6c3?entry=ttu&g_ep=EgoyMDI1MDgxMi4wIKXMDSoASAFQAw%3D%3D" target="_blank" class="small-btn">Location</a>
        <a href="#" class="small-btn">Share Feedback</a>
      </div>
    </div>

    <!-- Right side -->
    <div class="info-right">
      <p>Heavenly Food Restaurant is located in beautiful Grande Prairie, Alberta. We are proud to say that our location is one of the top-rated restaurants in the city thanks to all our wonderful staff and guests.</p>
      <div class="contact-info">
        <p><strong>Information</strong></p>
        <p>📞 (123) 456-7890</p>
        <p>📍 123 Main Street, Grande Prairie, Alberta</p>
        <p><strong>Hours of Operation</strong><br>
        Monday - Friday: 11am - 12am<br>
        Saturday - Sunday: 10am - 12am</p>
        <p><strong>Chill Hours</strong><br>
        Daily from 2pm - 5pm & 9pm - close</p>
      </div>
    </div>
  </section>

  <!-- Contact Modal -->
  <Modal id="contactModal" title="Contact Us">
    <p>📞 (123) 456-7890</p>
    <p>📧 info@heavenlyrestaurant.com</p>
  </Modal>

  <!-- Footer -->
  <footer>
    <p>&copy; 2025 HEAVENLY RESTAURANT — All Rights Reserved</p>
  </footer>

  <script is:client>
    initModals();
  </script>
</body>
</html>

