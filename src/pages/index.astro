
---
import Menu from "../components/Menu.astro";
import { initModals } from "../components/ModalController.ts";
import Modal from "../components/Modal.astro";
import { onMount } from "solid-js";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HEAVENLY RESTAURANT</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <!-- Top Navigation Bar -->
    <header class="navbar">
      <div class="nav-left">
  <a href="/">
    <img src="/images/hvn.jpeg" alt="HEAVENLY RESTAURANT" class="logo"/>
  </a>
</div>      <nav class="nav-right">
        <a href="#location">Location</a>
        <a href="#menu">Menu</a>
        <a href="#contact">Contact</a>
      </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero">
      <img src="/images/hero.jpeg" alt="Restaurant Interior" class="hero-img"/>
      <div class="hero-text">
        <h2>Welcome to HEAVENLY FOOD RESTAURANT</h2>
        <p>Delicious food, warm atmosphere, unforgettable taste.</p>
      </div>
    </section>

    <!-- Call-to-Action Buttons -->
    <section class="cta-buttons">
      <button class="cta-btn" data-open="pickup">üì¶ Pickup</button>
      <button class="cta-btn" data-open="delivery">üöö Delivery</button>
    </section>

    <!-- Menu Component -->
    <Menu />

    <!-- Modals for Pickup and Delivery -->
    <Modal id="pickup" title="Pickup Order">
      <form>
        <label for="pickup-name">Your Name:</label>
        <input type="text" id="pickup-name" name="pickup-name" required>
        <label for="pickup-time">Pickup Time:</label>
        <input type="time" id="pickup-time" name="pickup-time" required>
        <button type="submit">Confirm Pickup</button>
      </form>
    </Modal>

    <Modal id="delivery" title="Delivery Order">
      <form>
        <label for="delivery-address">Delivery Address:</label>
        <input type="text" id="delivery-address" name="delivery-address" required>
        <label for="delivery-contact">Contact Number:</label>
        <input type="tel" id="delivery-contact" name="delivery-contact" required>
        <button type="submit">Confirm Delivery</button>
      </form>
    </Modal>

    <!-- Contact Section -->
    <section id="contact">
      <h2>Contact Us</h2>
      <p>üìç 123 Main Street, Toronto, ON</p>
      <p>üìû (123) 456-7890</p>
      <p>üïí Open: 10AM - 10PM</p>
    </section>

    <!-- Footer -->
    <footer>
      <p>&copy; 2025 HEAVENLY RESTAURANT ‚Äî All Rights Reserved</p>
    </footer>

    <script>
      onMount(() => {
        initModals();
      });
    </script>
  </body>
</html>

