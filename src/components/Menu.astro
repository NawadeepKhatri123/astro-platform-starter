
---
import menuItems from "../data/menu.json";
import Modal from "./Modal.astro";
---

<section id="menu">
  <h2>Our Menu</h2>
  <div class="menu-grid">
    {menuItems.map(item => (
      <div class="menu-item">
        <img src={item.img} alt={item.name} />
        <h3>{item.name}</h3>
        <p class="price">${item.price}</p>
        <a class="order-btn" href="https://mariosgrill.square.site" target="_blank">Order Now</a>
      </div>
    ))}
  </div>
</section>
<button class="btn" data-open="pickup">Pickup</button>
<button class="btn" data-open="delivery">Delivery</button>

<Modal id="pickup" title="Pickup Order">
  <p>Pickup available between 9 AM â€“ 10 PM.</p>
</Modal>

<Modal id="delivery" title="Delivery Order">
  <p>Delivery available within 5km radius.</p>
</Modal>
