<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Our Menu | Heavenly Restaurant</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

  <!-- Navigation -->
  <header class="navbar">
    <div class="nav-left">
      <a href="/"><img src="/images/hvn.jpeg" alt="HEAVENLY RESTAURANT" class="logo"/></a>
    </div>
    <nav class="nav-right">
      <a href="/">Home</a>
      <a href="/menu">Menu</a>
      <a href="#contact">Contact</a>
    </nav>
  </header>

  <!-- Menu Section -->
  <section id="menu">
    <h2>Our Menu</h2>
    <div class="menu-grid">
      {menuItems.map(item => (
        <div class="menu-item">
          <img src={item.img} alt={item.name} />
          <h3>{item.name}</h3>
          <p class="price">${item.price}</p>
          <a class="order-btn" href="https://heavenly-food-restaurant.square.site" target="_blank">Order Now</a>
        </div>
      ))}
    </div>
  </section>

  <!-- Footer -->
