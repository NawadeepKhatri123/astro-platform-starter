
---
import { initModals } from "../components/ModalController.ts";
import Modal from "../components/Modal.astro";
---

<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>HEAVENLY RESTAURANT</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

  <!-- Navbar -->
  <header class="navbar">
    <div class="nav-left">
      <a href="/"><img src="/images/hvn.jpeg" alt="HEAVENLY RESTAURANT" class="logo"/></a>
    </div>
    <nav class="nav-right">
      <a href="#location">Location</a>
      <a href="#contact">Contact</a>
    </nav>
  </header>

  <!-- Hero -->
  <section class="hero">
    <div class="hero-text">
      <h2>Welcome to HEAVENLY FOOD RESTAURANT</h2>
      <p>Delicious food, warm atmosphere, unforgettable taste.</p>
    </div>
  </section>

  <!-- Info Section -->
  <section class="info-section">

    <div class="info-wrapper">
      <!-- LEFT: Buttons -->
      <div class="buttons-side">
        <div class="primary-btns">
          <a href="https://heavenly-food-restaurant.square.site" target="_blank" class="big-btn delivery">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2"
              stroke-linecap="round" stroke-linejoin="round"
              viewBox="0 0 24 24" width="20" height="20" style="margin-right:8px;">
            <path d="M3 18v-6h4V6h5l3 4h4l2 4h-3"></path>
            <circle cx="7" cy="18" r="2"></circle>
            <circle cx="17" cy="18" r="2"></circle>
          </svg>
          Delivery
        </a>
          <a href="https://heavenly-food-restaurant.square.site" target="_blank" class="big-btn pickup">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-width="2"
              stroke-linecap="round" stroke-linejoin="round"
              viewBox="0 0 24 24" width="20" height="20" style="margin-right:8px;">
            <path d="M21 16V8a2 2 0 0 0-2-2h-3.34a2 2 0 0 1-1.41-.59l-1.66-1.66A2 2 0 0 0 10.18 3H7a2 2 0 0 0-2 2v11"/>
            <rect x="3" y="16" width="18" height="5" rx="2" ry="2"></rect>
          </svg>
          Pickup
        </a>        </div>

        <div class="secondary-btns">
          <a href="/menu" class="small-btn">Menu</a>
          <button class="small-btn" data-open="contactModal">Contact Us</button>
          <a href="https://www.google.com/maps/place/Heavenly+Food+Restaurant" target="_blank" class="small-btn">Location</a>
          <a href="#" class="small-btn">Share Feedback</a>
        </div>
      </div>

      <!-- RIGHT: Text -->
      <div class="info-details">
        <div class="description">
          <p>Heavenly Food Restaurant is located in beautiful Grande Prairie, Alberta. We are proud to be one of the top-rated restaurants in the city thanks to our wonderful staff and guests.</p>
        </div>
        <div class="hours">
          <p><strong>Hours of Operation</strong><br>
          Monday - Friday: 11am - 12am<br>
          Saturday - Sunday: 10am - 12am</p>
          <p><strong>Chill Hours</strong><br>
          Daily from 2pm - 5pm & 9pm - close</p>
        </div>
        <div class="contact-info">
          <p><strong>Information</strong></p>
          <p>(123) 456-7890</p>
          <p>123 Main Street, Grande Prairie, Alberta</p>
        </div>
      </div>
    </div>

  </section>

  <!-- Contact Modal -->
  <Modal id="contactModal" title="Contact Us">
    <p>(123) 456-7890</p>
    <p>info@heavenlyrestaurant.com</p>
  </Modal>

  <!-- Footer -->
  <footer>
    <p>&copy; 2025 HEAVENLY RESTAURANT â€” All Rights Reserved</p>
  </footer>

  <script is:client>
    initModals();
  </script>
</body>
</html>

