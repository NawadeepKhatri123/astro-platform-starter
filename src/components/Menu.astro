
---
import menuItems from "../data/menu.json";
---

<section id="menu">
  <h2>Our Menu</h2>
  <div class="menu-grid">
    {menuItems.map(item => (
      <div class="menu-item">
        <img src={item.img} alt={item.name} />
        <h3>{item.name}</h3>
        <p class="price">${item.price}</p>
        <a class="order-btn" href="https://mariosgrill.square.site" target="_blank">Order Now</a>
      </div>
    ))}
  </div>
</section>
